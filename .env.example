# ===========================================
# CLIPIQ PLATFORM - ENVIRONMENT VARIABLES
# ===========================================

# Backend API URL (for frontend)
VITE_API_URL=http://localhost:5000/api/v1

# Database Configuration
DATABASE_URL=postgresql://clipiq_user:clipiq_password@localhost:5432/clipiq_db
DB_HOST=localhost
DB_PORT=5432
DB_USER=clipiq_user
DB_PASSWORD=clipiq_password
DB_NAME=clipiq_db

# MinIO S3 Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_VIDEOS=clipiq-videos
MINIO_BUCKET_THUMBNAILS=clipiq-thumbnails
MINIO_BUCKET_AVATARS=clipiq-avatars

# JWT Configuration
JWT_SECRET=clipiq-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=clipiq-refresh-token-secret
JWT_REFRESH_EXPIRE=30d

# Server Configuration
NODE_ENV=development
PORT=5000
CORS_ORIGIN=http://localhost:5173

# Upload Limits (in bytes)
MAX_VIDEO_SIZE=524288000
MAX_THUMBNAIL_SIZE=5242880
MAX_AVATAR_SIZE=2097152

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
