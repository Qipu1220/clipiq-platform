{
	"info": {
		"_postman_id": "clipiq-impression-api",
		"name": "ClipIQ Impression & Watch API",
		"description": "Test collection for impression logging and watch event tracking (RCM System - Milestone 1)",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{access_token}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:5000/api/v1",
			"type": "string"
		},
		{
			"key": "access_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "user_id",
			"value": "",
			"type": "string"
		},
		{
			"key": "video_id",
			"value": "",
			"type": "string"
		},
		{
			"key": "session_id",
			"value": "",
			"type": "string"
		},
		{
			"key": "impression_id",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "0. Setup - Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Extract token and user_id from response",
							"if (pm.response.code === 200) {",
							"    const jsonData = pm.response.json();",
							"    ",
							"    // Set token",
							"    pm.collectionVariables.set(\"access_token\", jsonData.data.tokens.accessToken);",
							"    ",
							"    // Set user_id",
							"    pm.collectionVariables.set(\"user_id\", jsonData.data.user.id);",
							"    ",
							"    console.log('Logged in as:', jsonData.data.user.username);",
							"    console.log('User ID:', jsonData.data.user.id);",
							"}",
							"",
							"pm.test(\"Login successful\", function () {",
							"    pm.response.to.have.status(200);",
							"    pm.expect(pm.response.json().success).to.be.true;",
							"});"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Generate a new session_id for this test run",
							"const uuid = require('uuid');",
							"pm.collectionVariables.set('session_id', uuid.v4());"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"login\": \"user001\",\n    \"password\": \"User@123456\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/auth/login",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"auth",
						"login"
					]
				},
				"description": "Login to get access token. Updates collection variables: access_token, user_id, session_id"
			},
			"response": []
		},
		{
			"name": "1. Get Random Video",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Extract video_id from response",
							"if (pm.response.code === 200) {",
							"    const jsonData = pm.response.json();",
							"    const videos = jsonData.data.videos || jsonData.data || jsonData.videos;",
							"    ",
							"    if (videos && videos.length > 0) {",
							"        pm.collectionVariables.set(\"video_id\", videos[0].id);",
							"        console.log('Video ID:', videos[0].id);",
							"        console.log('Video Title:', videos[0].title);",
							"    }",
							"}",
							"",
							"pm.test(\"Get videos successful\", function () {",
							"    pm.response.to.have.status(200);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/videos?limit=1",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"videos"
					],
					"query": [
						{
							"key": "limit",
							"value": "1"
						}
					]
				},
				"description": "Get a random video to test impression logging. Updates collection variable: video_id"
			},
			"response": []
		},
		{
			"name": "2. Log Impression (Personal Feed)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Extract impression_id from response",
							"if (pm.response.code === 201) {",
							"    const jsonData = pm.response.json();",
							"    pm.collectionVariables.set(\"impression_id\", jsonData.impression_id);",
							"    console.log('Impression ID:', jsonData.impression_id);",
							"}",
							"",
							"pm.test(\"Impression logged successfully\", function () {",
							"    pm.response.to.have.status(201);",
							"    pm.expect(pm.response.json().success).to.be.true;",
							"    pm.expect(pm.response.json().impression_id).to.exist;",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"user_id\": \"{{user_id}}\",\n    \"video_id\": \"{{video_id}}\",\n    \"session_id\": \"{{session_id}}\",\n    \"position\": 0,\n    \"source\": \"personal\",\n    \"model_version\": \"v0\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/impressions",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"impressions"
					]
				},
				"description": "Log an impression when video is shown >= 600ms. Updates collection variable: impression_id"
			},
			"response": []
		},
		{
			"name": "3. Log Watch Event (10 seconds)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Watch event logged successfully\", function () {",
							"    pm.response.to.have.status(200);",
							"    pm.expect(pm.response.json().success).to.be.true;",
							"});",
							"",
							"pm.test(\"Video views incremented\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData.data).to.exist;",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"impression_id\": \"{{impression_id}}\",\n    \"user_id\": \"{{user_id}}\",\n    \"video_id\": \"{{video_id}}\",\n    \"watch_duration\": 10,\n    \"completed\": false\n}"
				},
				"url": {
					"raw": "{{base_url}}/impressions/watch",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"impressions",
						"watch"
					]
				},
				"description": "Log watch event when user leaves video. This example logs 10 seconds watch time (WATCH_10S = true)"
			},
			"response": []
		},
		{
			"name": "4. Get Impression History",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Get impression history successful\", function () {",
							"    pm.response.to.have.status(200);",
							"    pm.expect(pm.response.json().success).to.be.true;",
							"});",
							"",
							"pm.test(\"History contains impressions\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData.data).to.be.an('array');",
							"    console.log('Total impressions:', jsonData.count);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/impressions/history?limit=10",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"impressions",
						"history"
					],
					"query": [
						{
							"key": "limit",
							"value": "10"
						}
					]
				},
				"description": "Get user's impression history with watch durations"
			},
			"response": []
		},
		{
			"name": "Extra: Log Impression (Trending)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Trending impression logged\", function () {",
							"    pm.response.to.have.status(201);",
							"    pm.expect(pm.response.json().success).to.be.true;",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"user_id\": \"{{user_id}}\",\n    \"video_id\": \"{{video_id}}\",\n    \"session_id\": \"{{session_id}}\",\n    \"position\": 1,\n    \"source\": \"trending\",\n    \"model_version\": \"v0\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/impressions",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"impressions"
					]
				},
				"description": "Test impression from trending source"
			},
			"response": []
		},
		{
			"name": "Extra: Log Watch (Quick Skip < 1s)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Skip logged successfully\", function () {",
							"    pm.response.to.have.status(200);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"impression_id\": \"{{impression_id}}\",\n    \"user_id\": \"{{user_id}}\",\n    \"video_id\": \"{{video_id}}\",\n    \"watch_duration\": 1,\n    \"completed\": false\n}"
				},
				"url": {
					"raw": "{{base_url}}/impressions/watch",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"impressions",
						"watch"
					]
				},
				"description": "Test quick skip (watch_duration < 1s, contributes to skip rate metric)"
			},
			"response": []
		},
		{
			"name": "Extra: Log Watch (Completed)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Completed watch logged\", function () {",
							"    pm.response.to.have.status(200);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"impression_id\": \"{{impression_id}}\",\n    \"user_id\": \"{{user_id}}\",\n    \"video_id\": \"{{video_id}}\",\n    \"watch_duration\": 120,\n    \"completed\": true\n}"
				},
				"url": {
					"raw": "{{base_url}}/impressions/watch",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"impressions",
						"watch"
					]
				},
				"description": "Test completed video watch (completed=true)"
			},
			"response": []
		}
	]
}
